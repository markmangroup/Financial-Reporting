{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Consultant Schema",
  "description": "Defines the structure for consultant metadata files",
  "type": "object",
  "required": ["id", "name", "totalCosts", "projects"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique consultant identifier (kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "Consultant full name"
    },
    "aliases": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other names used (e.g., Pepi for Petrana)"
    },
    "company": {
      "type": "string",
      "description": "Consulting company name if applicable"
    },
    "totalCosts": {
      "type": "number",
      "description": "Total amount paid to consultant"
    },
    "paymentPeriod": {
      "type": "object",
      "properties": {
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "projectId": { "type": "string" },
          "projectName": { "type": "string" },
          "allocationPercent": { "type": "number" },
          "allocatedCost": { "type": "number" },
          "evidence": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["sharepoint-activity", "timesheet", "contract", "manual"]
              },
              "details": { "type": "string" },
              "fileCount": { "type": "number" }
            }
          }
        }
      }
    },
    "sharepointActivity": {
      "type": "object",
      "properties": {
        "totalFiles": { "type": "number" },
        "byProject": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    }
  }
}
